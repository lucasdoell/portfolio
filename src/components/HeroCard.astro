---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<section class:list={["relative w-full max-w-5xl mx-auto", className]}>
  {/* Card Background */}
  <div
    class="absolute inset-0 bg-black/80 backdrop-blur-sm border border-white/10 rounded-lg"
  >
  </div>

  {/* Content */}
  <div class="relative z-10 px-8 py-16 md:px-12 md:py-20">
    <div class="flex flex-col md:flex-row items-start gap-12 md:gap-16">
      {/* Text Content */}
      <div class="flex-1 max-w-xl">
        <!-- <h2 class="text-gray-400 text-sm uppercase tracking-wider mb-4">
          Software Engineer
        </h2> -->

        <h1 class="text-3xl font-bold leading-tight mb-4">
          <span
            class="bg-gradient-to-br from-red-500 to-red-800 bg-clip-text text-transparent inline-block"
            >Cornell</span
          >
          <span class="text-white">
            CS student, software engineer, & founder of
          </span>
          <span
            class="bg-gradient-to-r from-sky-400 to-blue-500 bg-clip-text text-transparent inline-block"
            >lux.dev</span
          >
          <span class="text-white">
            â€“ crafting web apps that turn data into insights.</span
          >
        </h1>

        <p class="text-gray-400 text-base mb-8 leading-relaxed">
          I'm a software engineer studying computer science at <span
            class="text-white">Cornell University</span
          >. I'm also the founder of <span class="text-white">lux.dev LLC</span
          >, a software development company that specializes in building web
          applications for data visualization and analytics.
        </p>

        <div class="flex flex-row gap-4">
          <a
            href="#work"
            class="inline-flex items-center justify-center px-4 py-2 bg-white text-black text-sm font-medium hover:bg-gray-100 transition-colors rounded-lg"
          >
            View My Work
            <svg class="ml-2 w-3 h-3" viewBox="0 0 16 16" fill="none">
              <path
                d="M6.5 3.5L11 8L6.5 12.5"
                stroke="currentColor"
                stroke-width="1.5"></path>
            </svg>
          </a>

          <a
            href="mailto:lucas@lux.dev"
            class="inline-flex items-center justify-center px-4 py-2 border border-white/20 text-white text-sm hover:bg-white/10 transition-colors rounded-lg"
          >
            Get in Touch
          </a>
        </div>
      </div>

      {/* Image */}
      <div class="relative flex-shrink-0 w-full md:w-[320px] h-[360px]">
        <img
          src="/portrait.jpg"
          alt="Lucas Doell"
          class="w-full h-full object-cover rounded-lg"
        />
        <div class="absolute inset-0"></div>
      </div>
    </div>
  </div>
</section>
