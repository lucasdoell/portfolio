---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

// Example projects data - replace with your actual projects
const projects = [
  {
    title: "Parsertime",
    subtitle: "A data analytics platform for Overwatch players",
    description:
      "Parsertime is a data analytics platform for Overwatch players. It helps users improve their performance by providing insights into their gameplay.",
    image: "/ptime_img.png", // Replace with your actual image
    caseStudyUrl: "https://lux.dev/work/parsertime",
    projectUrl: "https://parsertime.app",
  },
  {
    title: "Data Visualization Platform",
    subtitle: "Building Interactive Analytics",
    description:
      "Creating intuitive interfaces for complex data analysis, making information accessible and actionable.",
    image: "/project-2.jpg", // Replace with your actual image
    caseStudyUrl: "#",
    projectUrl: "#",
  },
];
---

<section
  class:list={["w-full max-w-5xl mx-auto px-8 xl:px-0 py-24", className]}
>
  <h2 class="text-2xl font-bold text-white mb-12">Featured Projects</h2>

  <div class="grid md:grid-cols-2 gap-8">
    {
      projects.map((project) => (
        <article class="group relative bg-black/40 backdrop-blur-sm border border-white/10">
          {/* Project Image */}
          <div class="aspect-[16/9] overflow-hidden">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover"
            />
          </div>

          {/* Project Info */}
          <div class="p-8">
            <h3 class="text-xl font-bold text-white mb-1">{project.title}</h3>
            <p class="text-gray-400 mb-2">{project.subtitle}</p>
            <p class="text-gray-500 text-sm mb-6">{project.description}</p>

            <div class="flex gap-6">
              <a
                href={project.caseStudyUrl}
                class="text-[#094074] hover:text-blue-400 transition-colors text-sm inline-flex items-center"
                target="_blank"
              >
                Read case study
                <svg class="w-4 h-4 ml-1" viewBox="0 0 16 16" fill="none">
                  <path
                    d="M6.5 3.5L11 8L6.5 12.5"
                    stroke="currentColor"
                    stroke-width="1.5"
                  />
                </svg>
              </a>

              <a
                href={project.projectUrl}
                class="text-[#094074] hover:text-blue-400 transition-colors text-sm inline-flex items-center"
                target="_blank"
              >
                View project
                <svg
                  class="w-4 h-4 ml-1"
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M7 17L17 7M17 7H8M17 7V16"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>
