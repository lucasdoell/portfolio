<style>
  .backdrop-pill-container {
    border-radius: 9999px;
    background: hsl(0deg 0% 10% / 0.95);
  }
  .backdrop-pill-container > .backdrop,
  .backdrop-pill-container > .backdrop-edge {
    z-index: -1;
    position: absolute;
    inset: 0;
  }

  @supports (backdrop-filter: blur(16px)) or
    (-webkit-backdrop-filter: blur(16px)) {
    .backdrop-pill-container {
      background: hsl(0deg 0% 10% / 0.5);
      overflow: hidden;
    }
    .backdrop {
      -webkit-backdrop-filter: blur(16px);
      backdrop-filter: blur(16px);
      background: linear-gradient(to bottom, hsl(0deg 0% 15%), transparent 50%);
      pointer-events: none;
    }
    .backdrop-edge {
      -webkit-backdrop-filter: blur(12px) brightness(0.96);
      backdrop-filter: blur(12px) brightness(0.96);
      background: hsl(0deg 0% 10% / 0.1);
      height: 4px;
      transform: translateY(100%);
      pointer-events: none;
    }
  }
</style>
